<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app_mt="http://schemas.android.com/tools"
    android:background="@color/blanco">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app_mt:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            >


            <Button
                android:id="@+id/btnAddPlaca"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_boton"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Agregar VehÃ­culo"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/blanco"
                />
        </LinearLayout>


        <ListView
            android:id="@+id/listUnidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="#dadada"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>