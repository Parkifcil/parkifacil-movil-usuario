<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Multa cobrada con éxito"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout1"
            android:layout_marginHorizontal="40dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tarjeta"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txtNoTarjeta"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="XXXX XXXX XXXX XXXX"
                android:textSize="16dp"
                android:gravity="left"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout1"
            android:layout_marginHorizontal="40dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Fecha"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                android:textSize="16dp"
                android:gravity="left"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout1"
            android:layout_marginHorizontal="40dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Multa"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="$0.00 MX"
                android:textSize="16dp"
                android:gravity="left"
                android:textColor="#000000"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="¡Gracias!"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            >


            <Button
                android:id="@+id/btnGenerarTicket"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_boton"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Descarga recibo"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>